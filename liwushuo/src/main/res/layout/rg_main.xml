    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/rb_guide"
        style="@style/RadioButton"
        android:drawableTop="@drawable/home_sel"
        android:text="指南 " />

    <RadioButton
        android:id="@+id/rb_hot"
        style="@style/RadioButton"
