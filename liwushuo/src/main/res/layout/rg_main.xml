    <RadioButton
        android:id="@+id/rb_category"
        style="@style/RadioButton"
        android:drawableTop="@drawable/category_sel"
        android:text="分类 " />

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/RadioButton"
        android:drawableTop="@drawable/profile_sel"
        android:text="我的 " />
</RadioGroup>

