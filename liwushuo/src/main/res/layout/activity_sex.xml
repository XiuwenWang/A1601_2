<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_user_select_type"
    android:gravity="center"
    tools:context=".activity.SexActivity">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:background="@drawable/sex_ll_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="请选择您的性别" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bbbbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_boy"
                    style="@style/ImageButton"
                    android:layout_toLeftOf="@+id/boy"
                    android:src="@mipmap/ic_gender_boy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="男孩" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_girl"
                    style="@style/ImageButton"
                    android:src="@mipmap/ic_gender_girl" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="女孩"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
